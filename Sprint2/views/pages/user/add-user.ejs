<!--head will be added from /partial/head file-->
<%- include('../../partial/head'); %>
    <body>
        <!--header will be added from /partial/header file-->
        <%- include('../../partial/header'); %>
        <div class="container-xl">
            <!--calling post method /add-user from server.js file-->
            <form action="/add-user" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Add User</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>First Name</label>
                        <!--using required, forcing user to add first_name before saving-->
                        <input type="text" class="form-control" id="first_name" name="first_name" required>
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <!--using required, forcing user to add last_name before saving-->
                        <input type="text" class="form-control" id="last_name" name="last_name" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <!--cancel buttton will redirect to /user page-->
                    <a href="/user" class="btn btn-default" value="Cancel">Cancel</a>
                     <!--save button will submit the changes-->
                    <input type="submit" class="btn btn-success" value="Save">
                </div>
            </form>
        </div>
        <!--footer will be added from /partial/footer file-->
        <%- include('../../partial/footer'); %>
    </body>