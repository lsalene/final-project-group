<!--head will be added from /partial/head file-->
<%- include('../../partial/head'); %>

    <body>
        <!--header will be added from /partial/header file-->
        <%- include('../../partial/header'); %>
            <div class="container-xl">
                <div class="table-responsive">
                    <div class="table-wrapper">
                        <div class="table-title">
                            <div class="row">
                                <div class="col-sm-6">
                                    <h2>Manage <b>Users</b></h2>
                                </div>
                                <div class="col-sm-6">
                                    <!--Refrencing add-user page and making one button Add New User-->
                                    <a href="/add-user" class="btn btn-success"><i class="material-icons">&#xE147;</i>
                                        <span>Add New User</span></a>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-hover">
                            <!--Labeling the eliments in the manage-user page-->
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <!--Rendering the data for each lable-->
                            <tbody>
                                <% data?.forEach(function(el) { %>
                                    <tr>
                                        <td>
                                            <%= el.id %>
                                        </td>
                                        <td>
                                            <%= el.first_name %>
                                        </td>
                                        <td>
                                            <%= el.last_name %>
                                        </td>
                                        <td>
                                            <!--Edit user button-->
                                            <a href="/edit-user/<%= el.id %>" class="edit"><i class="material-icons"
                                                    data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                                            <!--Delete user button-->
                                            <a href="/deleteuser/<%= el.id %>" class="delete"><i class="material-icons"
                                                    data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </body>
    <!--footer will be added from /partial/footer file-->
    <%- include('../../partial/footer'); %>
    </html>