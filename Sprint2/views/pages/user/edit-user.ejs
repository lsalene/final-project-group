<!--head will be added from /partial/head file-->
<%- include('../../partial/head'); %>
    <body>
        <!--header will be added from /partial/header file-->
        <%- include('../../partial/header'); %>
        <div class="container-xl">
            <!--post method /edit-user will be called from server.js file-->
            <form action="/edit-user" method="post">
                <div class="modal-header">
                    <!--page title-->
                    <h4 class="modal-title">Edit User</h4>
                </div>
                 <!--Adding labels and text boxes to input new restaurant name-->
                <div class="modal-body">
                    <div class="form-group">
                        <label>Id</label>
                        <input type="text" value="<%= data[0].id %>"class="form-control" id="id" name="id" required readonly>
                    </div>
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" value="<%= data[0].first_name %>" class="form-control" id="first_name" name="first_name" required>
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text"  value=<%= data[0].last_name %> class="form-control" id="last_name" name="last_name" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <!--cancel buttton will redirect to /user page-->
                    <a href="/user" class="btn btn-default" value="Cancel">Cancel</a>
                     <!--save button will submit the changes-->
                    <input type="submit" class="btn btn-success" value="Save">
                </div>
            </form>
        </div>
        <!--footer will be added from /partial/footer file-->
        <%- include('../../partial/footer'); %>
    </body>