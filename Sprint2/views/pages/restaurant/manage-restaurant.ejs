<!--head will be added from /partial/head file-->
<%- include('../../partial/head'); %>

    <body>
        <!--header will be added from /partial/header file-->
        <%- include('../../partial/header'); %>
            <div class="container-xl">
                <div class="table-responsive">
                    <div class="table-wrapper">
                        <div class="table-title">
                            <div class="row">
                                <div class="col-sm-6">
                                    <h2>Manage <b>Restaurant</b></h2>
                                </div>
                                <div class="col-sm-6">
                                    <!--Refrencing add-restaurant page and making one button Add New Restaurant-->
                                    <a href="/add-restaurant" class="btn btn-success"><i class="material-icons">&#xE147;</i>
                                        <span>Add New Restaurant</span></a>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-hover">
                            <thead>
                                <!--Labeling the eliments in the manage-restaurant page-->
                                <tr>
                                    <th>Id</th>
                                    <th>Restaurant Name</th>
                                    <th>User</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <!--Rendering the data for each lable-->
                            <tbody>
                                <% data?.forEach(function(el) { %>
                                    <tr>
                                        <td>
                                            <%= el.restaurant_id %>
                                        </td>
                                        <td>
                                            <%= el.restaurant_name %>
                                        </td>
                                        <td>
                                            <%= el.first_name %> <%= el.last_name %>
                                        </td>
                                        <td>
                                            <!--Edit restaurant button-->
                                            <a href="/edit-restaurant/<%= el.restaurant_id %>" class="edit"><i class="material-icons"
                                                    data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                                            <!--Delete restaurant button-->
                                            <a href="/delete-restaurant/<%= el.restaurant_id %>" class="delete"><i class="material-icons"
                                                    data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </body>
     <!--footer will be added from /partial/footer file-->
    <%- include('../../partial/footer'); %>
    </html>